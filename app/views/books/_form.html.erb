    <%= f.label :book_name %><br>
    <%= f.text_field :book_name, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :author %><br>
    <%= f.text_field :author, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :publisher %><br>
    <%= f.text_field :publisher, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :release_date %><br>
    <%= f.datetime_select :release_date, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :isbn_code %><br>
    <%= f.number_field :isbn_code, class:"form-control" %>
  </div>
