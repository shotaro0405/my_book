<div class="col-md-12">
<p id="notice"><%= notice %></p>

<h1>蔵書一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>表紙</th>
      <th>タイトル</th>
      <th>著者</th>
      <th>価格</th>
      <th>出版社</th>
      <th>発売日</th>
      <th>ISBN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do   |book| %>
      <tr>
        <td><img src="<%= book.images %>" alt="" class="img-responsive"></td>
        <td><%= book.book_name %></td>
        <td><%= book.author %></td>
        <td><%= number_to_currency(book.price, unit: '¥', perception: 0) %></td>
        <td><%= book.publisher %></td>
        <td><%= book.release_date.strftime('%Y%m%d') %></td>
        <td><%= book.isbn_code %></td>
        <td><%= link_to '閲覧', book, class:"btn byn-xs btn-info" %></td>
        <td><%= link_to '編集', edit_book_path(book), class:"btn byn-xs btn-info" %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: '本当にいいですか?' }, class:"btn byn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規蔵書の登録', new_book_path, class:"btn btn-primary btn-lg" %>
</div>
